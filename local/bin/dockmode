#!/bin/bash

contains() {
    what="$1"
    shift
    while [ -n "$1" ]; do
        [ "$what" = "$1" ] && return 0
        shift
    done
    return 1
}

where="${1:-above}"
contains "$where" "above" "below" "left-of" "right-of" || exit 1

xset dpms 0 0 0
xautolock -disable
xrandr --output DP1 --$where eDP1
bash ~/.fehbg
